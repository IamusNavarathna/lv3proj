
function GarbageCheck()
    > "GC: items: ", GC.items, ", Mem: ", GC.usedMem >> 10, "k  (normal: ", GC.th_active >> 10, "k, active: ", GC.th_active >> 10, "k)"
end

function GarbageCheckPeriodic()
    GarbageCheck()
    CallScheduler.Schedule(GarbageCheckPeriodic, 5000)
end

GC.adjust(GC.ADJ_LOOSE)
GC.enable(true)
> "Garbage collection policy: ", GC.adjust()

